<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin"
    tools:context="com.streamstech.droid.mshtb.activity.XRayResultActivity">

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <AutoCompleteTextView
            android:id="@+id/txtSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:weightSum="1">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/lblPatient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="--\n--"
                android:textAlignment="center"
                android:textSize="15dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/lblTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="2018-08-09 04:45PM"
                android:textColor="@color/colorWhite"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnSave"
        android:layout_below="@+id/topLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblReadonlyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/question_text_size"
                android:textColor="@color/questionTextColor"
                android:background="@color/colorAccent"
                android:padding="5dp"
                android:gravity="center"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:text="Md. Shafiul Parvez" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="1. Test Order Date"
                android:textColor="@color/colorWhite"
                android:background="@color/questionBackColor"
                android:padding="@dimen/question_text_padding"
                android:textSize="20dp" />

            <DatePicker
                android:id="@+id/dtOrderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                ></DatePicker>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Chest X-Ray"
                    android:textColor="@color/questionTextColor"
                    android:background="@color/questionBackColor"
                    android:padding="@dimen/question_text_padding"
                    android:textSize="@dimen/question_text_size" />

                <com.streamstech.droid.mshtb.util.MyRadioGroup
                    android:id="@+id/radioXray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yes" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no" />
                </com.streamstech.droid.mshtb.util.MyRadioGroup>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="1. Test Result Date"
                android:textColor="@color/colorWhite"
                android:background="@color/questionBackColor"
                android:padding="@dimen/question_text_padding"
                android:textSize="20dp" />

            <DatePicker
                android:id="@+id/dtResultDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                ></DatePicker>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Radiological finding"
                    android:textColor="@color/questionTextColor"
                    android:background="@color/questionBackColor"
                    android:padding="@dimen/question_text_padding"
                    android:textSize="@dimen/question_text_size" />

                <com.streamstech.droid.mshtb.util.MyRadioGroup
                    android:id="@+id/radioRadiology"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Infiltration" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consolidation" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Effusuion" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collapse" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Info not available" />
                </com.streamstech.droid.mshtb.util.MyRadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Radiological diagnosis"
                    android:textColor="@color/questionTextColor"
                    android:background="@color/questionBackColor"
                    android:padding="@dimen/question_text_padding"
                    android:textSize="@dimen/question_text_size" />

                <com.streamstech.droid.mshtb.util.MyRadioGroup
                    android:id="@+id/radioRadiologyDiagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Abnormal suggestive of TB" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Abnormal not suggestive of TB" />

                </com.streamstech.droid.mshtb.util.MyRadioGroup>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Extent of disease"
                    android:textColor="@color/questionTextColor"
                    android:background="@color/questionBackColor"
                    android:padding="@dimen/question_text_padding"
                    android:textSize="@dimen/question_text_size" />

                <com.streamstech.droid.mshtb.util.MyRadioGroup
                    android:id="@+id/radioExtent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unilateral disease" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bilateral disease" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Abnormal but extent not define" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Info not available" />
                </com.streamstech.droid.mshtb.util.MyRadioGroup>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Save" />
</RelativeLayout>
