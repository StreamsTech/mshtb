<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:multi_line_radio_group="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin"
    tools:context="com.streamstech.droid.mshtb.activity.PETEnrollmentActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnSave"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<android.support.v7.widget.AppCompatTextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/questionBackColor"-->
            <!--android:padding="@dimen/question_text_padding"-->
            <!--android:text="Index Patient ID"-->
            <!--android:textColor="@color/questionTextColor"-->
            <!--android:textSize="@dimen/question_text_size" />-->

            <!--<android.support.v7.widget.AppCompatTextView-->
            <!--android:id="@+id/lblIndexPatientID"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="@dimen/question_text_padding"-->
            <!--android:text="&#45;&#45;"-->
            <!--android:textColor="@color/colorAccent"-->
            <!--android:textSize="@dimen/question_text_size" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9">

                    <!--<EditText-->
                        <!--android:id="@+id/txtIndexPatientID"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:hint="Index patient, search or scan"-->
                        <!--android:maxLines="1"-->
                        <!--android:singleLine="true"-->
                        <!--android:textColor="@color/colorAccent" />-->
                    <AutoCompleteTextView
                        android:id="@+id/txtIndexPatientID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Search a patient or scan a QR"
                        android:textSize="15dp" />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/imgIndexQR"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:src="@drawable/qr" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtIndexPatientName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="Index patient name"
                    android:inputType="none"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9">

                    <EditText
                        android:id="@+id/txtID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:hint="Enter contact ID or scan the QR code"
                        android:inputType="none"
                        android:maxLines="1"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/imgQR"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:src="@drawable/qr" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/questionBackColor"
                android:padding="@dimen/question_text_padding"
                android:text="Site"
                android:textColor="@color/questionTextColor"
                android:textSize="@dimen/question_text_size" />

            <Spinner
                android:id="@+id/spinnerSite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#d11f08"
                android:entries="@array/sites_samples"
                android:padding="5dp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_name"
                    android:inputType="textCapWords"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/txtAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:inputType="number|numberDecimal"
                android:maxLength="5" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/questionBackColor"
                android:padding="@dimen/question_text_padding"
                android:text="Gender"
                android:textColor="@color/questionTextColor"
                android:textSize="@dimen/question_text_size" />

            <com.whygraphics.multilineradiogroup.MultiLineRadioGroup
                android:id="@+id/radioGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                multi_line_radio_group:max_in_row="1"
                multi_line_radio_group:radio_buttons="@array/radio_buttons_gender" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Weight in KG"
                    android:inputType="number|numberDecimal"
                    android:maxLength="4"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Height in CM"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtMUAC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:hint="MUAC for children 0-5 years of age"
                    android:maxLength="5"
                    android:inputType="numberDecimal"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtNID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="National ID no"
                    android:inputType="number"
                    android:maxLines="5"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:id="@+id/bmiLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/questionBackColor"
                android:padding="@dimen/question_text_padding"
                android:text="BMI for age 18 years and above"
                android:textColor="@color/questionTextColor"
                android:textSize="@dimen/question_text_size" />

            <com.whygraphics.multilineradiogroup.MultiLineRadioGroup
                android:id="@+id/radioBMI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                multi_line_radio_group:max_in_row="1"
                android:focusable="false"
                multi_line_radio_group:radio_buttons="@array/radio_buttons_bmi" />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/pregnancyLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/questionBackColor"
                    android:padding="@dimen/question_text_padding"
                    android:text="Pregnancy history"
                    android:textColor="@color/questionTextColor"
                    android:textSize="@dimen/question_text_size" />

                <com.whygraphics.multilineradiogroup.MultiLineRadioGroup
                    android:id="@+id/radioPregnancy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    multi_line_radio_group:max_in_row="1"
                    multi_line_radio_group:radio_buttons="@array/radio_buttons_pregnancy" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/questionBackColor"
                android:padding="@dimen/question_text_padding"
                android:text="Relationship with index patient"
                android:textColor="@color/questionTextColor"
                android:textSize="@dimen/question_text_size" />

            <com.whygraphics.multilineradiogroup.MultiLineRadioGroup
                android:id="@+id/radioRelation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                multi_line_radio_group:max_in_row="1"
                multi_line_radio_group:radio_buttons="@array/radio_buttons_relationship" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtRelationOther"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Other relation"
                    android:visibility="gone"
                    android:inputType="text"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Save" />

</RelativeLayout>
