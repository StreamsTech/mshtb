<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:multi_line_radio_group="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.streamstech.droid.mshtb.activity.PETClinicianTBFollowupActivicity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnSave"
        android:layout_below="@+id/topLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/lblTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:text="2018-08-09 04:45PM"
                android:textColor="@color/colorWhite"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/questionBackColor"
                    android:padding="@dimen/question_text_padding"
                    android:text="1. Adherence"
                    android:textColor="@color/questionTextColor"
                    android:textSize="@dimen/question_text_size" />

                <com.whygraphics.multilineradiogroup.MultiLineRadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    multi_line_radio_group:default_button="No dose missed"
                    multi_line_radio_group:max_in_row="1"
                    multi_line_radio_group:radio_buttons="@array/radio_buttons_pet_adherence" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/questionBackColor"
                android:padding="@dimen/question_text_padding"
                android:text="2. Lab test"
                android:textColor="@color/questionTextColor"
                android:textSize="@dimen/question_text_size" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chk1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pregnancy test result"
                android:tag="0"/>
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chk2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sputum AFB smear"
                android:tag="1"/>
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chk3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CXR"
                android:tag="3"/>
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chk4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LFTs"
                android:tag="4"/>
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chk5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CBC"
                android:tag="5"/>
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chk6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GXP"
                android:tag="6"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/questionBackColor"
                android:padding="@dimen/question_text_padding"
                android:text="3. Plan"
                android:textColor="@color/questionTextColor"
                android:textSize="@dimen/question_text_size" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chk7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue Medication (>90% Adherence)"
                android:tag="1"/>
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chk8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue Medication (&lt;90% Adherence)"
                android:tag="3"/>
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chk9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D/C Medication â€“ Reason"
                android:tag="4"/>
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chk10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Begin Clinical/CXR Monitoring Protocol "
                android:tag="5"/>
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chk11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Medication"
                android:tag="6"/>
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chk12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seek Expert Consultation "
                android:tag="7"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/questionBackColor"
                android:padding="@dimen/question_text_padding"
                android:text="4. New instructions"
                android:textColor="@color/questionTextColor"
                android:textSize="@dimen/question_text_size" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtInstruction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Instructions"
                    android:inputType="text"
                    />
            </android.support.design.widget.TextInputLayout>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/questionBackColor"
            android:padding="@dimen/question_text_padding"
            android:text="5. Return visit date"
            android:textColor="@color/questionTextColor"
            android:textSize="@dimen/question_text_size" />

            <DatePicker
                android:id="@+id/dtReturnVisitDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"></DatePicker>
        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Save" />
</RelativeLayout>
