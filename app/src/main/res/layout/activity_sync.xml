<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.streamstech.droid.mshtb.activity.SyncActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v4.widget.ContentLoadingProgressBar
            android:id="@+id/progressLoading"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/lblStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="Last sync time"
            android:textColor="@color/colorAccent"
            android:textSize="15dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/lblLastSyncTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="left"
            android:paddingRight="10dp"
            android:text="n/a"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    android:weightSum="1">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:text="Pending data count"
        android:textColor="@color/colorAccent"
        android:textSize="15dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/lblCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:gravity="left"
        android:paddingRight="10dp"
        android:text="n/a"
        android:textSize="15dp" />
</LinearLayout>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnSync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="SYNC" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/lblWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DON'T STOP/KILL THE APP WHEN SYNCING!"
        android:paddingTop="20dp"
        android:visibility="visible"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"  />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/lblMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You can go back when syncing and keep working!"
        android:paddingTop="20dp"
        android:visibility="gone"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"  />

</LinearLayout>

